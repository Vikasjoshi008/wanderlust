<% layout("/layouts/boilerplate.ejs")%>
<div class="row justify-content-center mt-3">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="card listing-form-card p-4 shadow-sm">
      <h3 class="mb-4 text-center">Create a New Listing</h3>
      <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="listing[title]" id="title" placeholder="Enter title" class="form-control rounded-pill px-3 py-2" required>
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" id="description" class="form-control rounded-4 px-3 py-2" rows="3" required></textarea>
          <div class="invalid-feedback">Please enter a description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input type="file" name="listing[image]" class="form-control form-control-file" required>
        </div>
        <div class="row g-2">
          <div class="col-12 col-md-4 mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" id="price" placeholder="Enter price" class="form-control rounded-pill px-3 py-2" required>
            <div class="invalid-feedback">Please enter a valid price!</div>
          </div>
          <div class="col-12 col-md-8 mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" id="country" placeholder="Enter country" class="form-control rounded-pill px-3 py-2" required>
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" name="listing[location]" id="location" placeholder="Enter location" class="form-control rounded-pill px-3 py-2" required>
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button type="submit" class="btn btn-danger w-100 rounded-pill py-2 mt-2">Add Listing</button>
      </form>
    </div>
  </div>
</div>